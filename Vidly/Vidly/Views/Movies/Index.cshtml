@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Create New Movie", "New", "Movies", null, new { @class = "btn btn-primary", @role = "button" })
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "View", "Movies", new { id = movie.Id }, null)</td>
                @if (movie.GenreId != null)
                {
                <td>@movie.Genre.Name</td>
                }
            </tr>
        }
    </tbody>
</table>
