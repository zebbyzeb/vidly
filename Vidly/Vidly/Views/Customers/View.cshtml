@model Vidly.Models.Customer
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<h4>@Model.MembershipType.Name</h4>
@if (!string.IsNullOrWhiteSpace(Model.Birthdate))
{
    <h6>Birthdate: @Model.Birthdate</h6>
}
@Html.ActionLink("Edit", "Edit", "Customers", new { Id = Model.Id }, new { @class = "btn btn-primary", @role = "button" })